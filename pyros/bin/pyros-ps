import sys
import time
import pyroscommon as pc


args = pc.processCommonHostSwitches(pc.args)


def printHelp(rc):
    print("usage: pyros [<host[:port]] ps [<options>]")
    print("")
    print("    -h                    help message")
    sys.exit(rc)


if pc.hasHelpSwitch:
    printHelp(0)


def executeCommand(client, commandId):
    client.publish("system/" + commandId, "ps")
    return True


def processLine(line):
    if line.endswith("\n"):
        line = line[:len(line) - 1]

    split = line.split(" ")
    if len(split) >= 5:
        try:
            l = int(split[4])
            if l >= 2 * 1024 * 1024 * 1024:
                ll = str(round(l / (1024.0 * 1024.0 * 1024.0), 2)) + "GB"
            elif l > 2 * 1024 * 1024:
                ll = str(round(l / (1024.0 * 1024.0), 2)) + "MB"
            elif l > 2 * 1024:
                ll = str(round(l / 1024.0, 2)) + "KB"
            else:
                ll = str(l) + "B"
            split[4] = ll
        except:
            pass

    if len(split) >= 6:
        try:
            t = float(split[5])
            split[5] = "\"" + time.ctime(t) + "\""
        except:
            pass
    else:
        split.append("")

    if len(split) >= 7:
        try:
            t = float(split[6])
            split[6] = "\"" + time.ctime(t) + "\""
        except:
            pass
    else:
        split.append("")

    # print("split=" + str(split))
    print("{0!s:<20} {1:<18} {2:<15} {3:<7} {4:<10} {5:<15} {6:<15}".format(*split))


pc.printOutCommand(executeCommand, processLine,
                   "{0:<20} {1:<18} {2:<15} {3:<7} {4:<10} {5:<15} {6:<15}".format(
                       "name", "type", "status", "rc", "len", "date", "pinged"), "")
