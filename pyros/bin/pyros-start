#!/usr/bin/env python3

import os
import sys
import pyroscommon as pc


tail = False

args = pc.processCommonHostSwitches(pc.args)

def help(rc):
    print("usage: pyros [<host[:port]>] start [-f] <processId>")
    print("")
    print("    -h                    help message")
    print("    -f                    'tail' messages out of process")
    print("    <processId>           process id")
    sys.exit(rc)

if len(args) < 1:
    help(1)

if pc.help:
    help(0)

if args[0] == "-f":
    tail = True
    del args[0]

processId = args[0]


def executeCommand(client):
    client.publish("exec/" + processId, "start")
    return True


def processOut(line):
    if line.endswith("\n"):
        line = line[:len(line) - 1]
    if not tail:
        return False
    print(line)
    return True


def processStatus(line):
    if line.startswith("started"):
        if tail:
            print("Process " + processId + " is started. Showing output:")
        else:
            print("Process " + processId + " is started.")
        return tail
    elif line.startswith("exit"):
        print("Process " + processId + " is exited.")
        return False
    return True


pc.processCommand(processId, executeCommand, processOut, processStatus)


